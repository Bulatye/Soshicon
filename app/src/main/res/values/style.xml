<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="textInputEditText">
        <item name="android:background">@drawable/radius</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textColor">@color/text_color_gray</item>
        <item name="android:textColorHint">@color/text_color_hint</item>
        <item name="android:padding">20dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="textInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="textViewPrimarySetting">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="oval_shape_cancel">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:background">@drawable/oval_shape_cancel</item>
        <item name="android:padding">5dp</item>
        <item name="android:src">@drawable/ic_clear_white</item>
    </style>

    <style name="imageViewIconSetting">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="textIconSetting">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="arrowIconSetting">
        <item name="android:layout_width"> wrap_content</item>
        <item name="android:layout_height"> wrap_content</item>
        <item name="android:layout_marginEnd"> 16dp</item>
        <item name="android:src">@drawable/ic_arrow_right</item>
    </style>
</resources>